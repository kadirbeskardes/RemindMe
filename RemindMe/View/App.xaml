<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RemindMe.App">
    <Application.Resources>
        <ResourceDictionary x:Name="RS">
            <Style x:Key="Style" TargetType="NavigationPage">
                <Setter x:Name="Bar" Property="BarBackgroundColor" Value="{Binding Primary}"/>
                <Setter Property="BarTextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>